        <script>
            const webcamVideo = document.getElementById("cameraFeed");

            navigator.mediaDevices.getUserMedia({ video: true }).then((stream) => {
                webcamVideo.srcObject = stream;
            }).catch((error) => {console.error(error) })
        </script>
      <div id="cameraStatus" class="camera-status online">Online</div>
    </div>
